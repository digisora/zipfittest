<script>
    var lat = <%= @location.latitude %>;
    var lng = <%= @location.longitude %>;
    var timeZoneAPI = "http://api.timezonedb.com/v2/get-time-zone?key=9V7A8K8QQ4IJ&format=json&by=position&lat="+lat+"&lng="+lng+"";
   
    $.getJSON( timeZoneAPI, function( json ) {
      console.log(json);
      var abbreviation = json.abbreviation;
      var countryName = json.countryName;
      var formatted = json.formatted;
      $( ".abrv" ).append(abbreviation);
      $( ".country" ).append(countryName);
      $( ".time" ).append(formatted);
    });

</script>

<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 custom-box">
  <h3>Latitude: <%= @location.latitude %></h3>
  <h3>Longitude: <%= @location.longitude %></h3>
  <h3 class="abrv"></h1>
  <h3 class="country"></h2>
  <h3 class="time"></h2>
</div>